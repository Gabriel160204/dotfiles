colorscheme gruvbox
" Theme colorscheme gruvbox
let g:airline_theme='base16_gruvbox_dark_hard'

syntax on

set number
set ruler

" Don't make noise
set visualbell

" default file encoding
set encoding=utf-8

" Line wrap
set wrap

" Tabs conf

set noexpandtab
set autoindent
set smartindent

set tabstop=4
set shiftwidth=4
set softtabstop=4
set indentexpr=

" faster updates!
set updatetime=100

" automatically read on change

set autoread
set termguicolors
